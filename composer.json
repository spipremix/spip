{
    "name": "spip/spip",
    "type": "project",
    "repositories": [{
        "type": "composer",
        "url": "https://composer-spip.lerebooteux.fr"
    }],
    "require": {
        "php": "5.3 - 7.1",
        "spip/composer-installer": "^0.2",
        "spip/cms": "3.1.*",
        "spip/mots": "2.7.*",
        "spip/organiseur": "1.0.*",
        "spip/images": "1.2.*",
        "spip/dist": "3.1.*"
    },
    "license": "GPL-3.0-or-later",
    "authors": [{
        "name": "Arnaud Martin",
        "email": "arno@rezo.net"
    },{
        "name": "Antoine Pitrou",
        "email": "antoine@pitrou.net"
    },{
        "name": "Philippe Rivi√®re",
        "email": "fil@rezo.net"
    },{
        "name": "Emmanuel Saint-James",
        "email": "esj@rezo.net"
    }],
    "config": {
        "preferred-install": "dist",
        "platform": {
            "php": "5.3.29"
        }
    },
    "extra": {
        "spip": {
            "template": "spip/dist",
            "extensions": [
                "spip/mots",
                "spip/organiseur",
                "spip/images"
            ]
        }
    }
}
